{% embed 'partials/base.html.twig' %}

  {% set collection = page.collection() %}
  {% set base_url = page.url %}
  {% set feed_url = base_url %}

  {% if base_url == '/' %}
    {% set base_url = '' %}
  {% endif %}

  {% if base_url == base_url_relative %}
    {% set feed_url = base_url~'/'~page.slug %}
  {% endif  %}

  {% block content %}
    <div class="large-6 columns">
      {% for child in collection %}
        {% include 'partials/default.html.twig' with {'page':child, 'truncate':true} %}
      {% endfor %}
    </div> 

    <div class="large-6 columns">
    {% for module in page.collection({'items':{'@taxonomy.category': 'right'},'order': {'by': 'default', 'dir': 'asc'}}) %}
    {% if module.template %}
        {% include 'right/' ~ module.template ~ '.html.twig' %}
    {% endif %}
{% endfor %}
     </div>
  {% endblock %}

{% endembed %}


